assign [class="firefox" instance="Navigator"] $firefox
assign [class="Code" instance="code"] $code
assign [class="Postman" instance="postman"] $postman
assign [class="Slack" instance="slack"] $slack

exec --no-startup-id xrandr --output eDP --off
exec --no-startup-id xrandr --output HDMI-A-O --mode 1920x1080 --primary --auto --rate 144.00
gaps inner 20
